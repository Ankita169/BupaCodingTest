@model BookOwner.Models.Owner

@*@{
        ViewBag.Title = "www.compilemode.com";
    }*@


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
        .container {
            display: flex;
            border: 2px solid #000;
            padding: 10px;
            margin: 20px 0;
        }

        .box {
            flex: 1;
            border: 2px solid #ccc;
            margin: 15px;
            padding: 25px;
        }

        .container {
            display: flex;
            justify-content: center;
            flex-wrap: wrap;
            gap: 10px;
            margin: 20px 0;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="box">
            <div class="row" style="background-color: #0079c8; text-align: center; color: white">
                <h2> Owner and Books</h2>
            </div>
            <div class="row">
                <div class="col-sm-4">
                    <center>
                        <table class="table table-responsive" style="width:200px;margin-top:15px">
                            <tr>
                                <th style="width: 60px; background-color: #0079c8; color: white">
                                    No Data Available
                                </th>
                            </tr>
                            <tr>
                                <td>
                                    <input type="button" class="btn btn-info" style="background-color:#0079c8" value="Home" onclick="location.href='@Url.Action("Book", "Home")'" />

                                </td>
                            </tr>

                        </table>
                    </center>
                </div>
            </div>
            <div class="row">
                &nbsp;
            </div>
            

        </div>
    </div>
</body>
</html>

